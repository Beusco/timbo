<Window x:Class="TimboToolApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Timbo Tool Pro" Height="700" Width="1100"
        Background="{StaticResource BackgroundBrush}" Foreground="{StaticResource TextBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource CardBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
            <StackPanel Margin="15">
                <TextBlock Text="TIMBO TOOL" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,30"/>
                
                <Button Content="Dashboard" Style="{StaticResource ModernButton}" Background="Transparent" Foreground="{StaticResource TextBrush}" HorizontalContentAlignment="Left" Margin="0,0,0,5"/>
                <Button Content="Supported Models" Style="{StaticResource ModernButton}" Background="Transparent" Foreground="{StaticResource MutedTextBrush}" HorizontalContentAlignment="Left" Margin="0,0,0,5"/>
                <Button Content="Downloads" Style="{StaticResource ModernButton}" Background="Transparent" Foreground="{StaticResource MutedTextBrush}" HorizontalContentAlignment="Left" Margin="0,0,0,5"/>
                
                <Separator Background="{StaticResource BorderBrush}" Margin="0,20"/>
                
                <TextBlock x:Name="UserDisplay" Text="User: Barry" Foreground="{StaticResource TextBrush}" Margin="0,0,0,5"/>
                <TextBlock x:Name="CreditsDisplay" Text="Credits: 1,900" Foreground="{StaticResource PrimaryBrush}" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>

            <!-- Device Status Header -->
            <Border Grid.Row="0" Background="{StaticResource CardBrush}" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                <DockPanel>
                    <TextBlock Text="DEVICE STATUS:" FontWeight="Bold" Foreground="{StaticResource MutedTextBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock x:Name="StatusText" Text="Waiting for device..." Foreground="{StaticResource PrimaryBrush}" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Text="MODE: ADB/FASTBOOT" HorizontalAlignment="Right" Foreground="{StaticResource MutedTextBrush}" VerticalAlignment="Center" FontSize="11"/>
                </DockPanel>
            </Border>

            <!-- Features Tabs -->
            <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0" Style="{StaticResource {x:Type TabControl}}">
                <TabItem Header="GENERAL">
                    <UniformGrid Columns="3" Margin="0,10">
                        <Button Content="Read Info (ADB)" Style="{StaticResource ModernButton}" Margin="5" Click="BtnReadInfo_Click"/>
                        <Button Content="Reboot System" Style="{StaticResource ModernButton}" Margin="5" Click="BtnReboot_Click"/>
                        <Button Content="Reboot Recovery" Style="{StaticResource ModernButton}" Margin="5" Click="BtnRebootRecovery_Click"/>
                        <Button Content="Factory Reset" Style="{StaticResource ModernButton}" Margin="5" Click="BtnReset_Click"/>
                        <Button Content="Install Drivers" Style="{StaticResource ModernButton}" Margin="5" Click="BtnDrivers_Click"/>
                        <Button Content="Clear Logs" Style="{StaticResource ModernButton}" Margin="5" Background="#475569" Click="BtnClear_Click"/>
                    </UniformGrid>
                </TabItem>
                <TabItem Header="SAMSUNG">
                    <UniformGrid Columns="3" Margin="0,10">
                        <Button Content="FRP Reset (Download)" Style="{StaticResource ModernButton}" Margin="5" Click="BtnFrp_Click"/>
                        <Button Content="Soft Brick Fix" Style="{StaticResource ModernButton}" Margin="5" Click="BtnSimulate_Click"/>
                        <Button Content="CSC Change" Style="{StaticResource ModernButton}" Margin="5" Click="BtnSimulate_Click"/>
                        <Button Content="Exit Download" Style="{StaticResource ModernButton}" Margin="5" Click="BtnReboot_Click"/>
                    </UniformGrid>
                </TabItem>
                <TabItem Header="UNLOCK / SECURITY">
                    <UniformGrid Columns="3" Margin="0,10">
                        <Button Content="Network Unlock" Style="{StaticResource ModernButton}" Margin="5" Click="BtnUnlock_Click"/>
                        <Button Content="Read Codes" Style="{StaticResource ModernButton}" Margin="5" Click="BtnSimulate_Click"/>
                        <Button Content="IMEI Repair" Style="{StaticResource ModernButton}" Margin="5" Click="BtnImei_Click"/>
                        <Button Content="Write Certificate" Style="{StaticResource ModernButton}" Margin="5" Click="BtnSimulate_Click"/>
                        <Button Content="Patch Cert" Style="{StaticResource ModernButton}" Margin="5" Click="BtnSimulate_Click"/>
                    </UniformGrid>
                </TabItem>
                <TabItem Header="PARTITIONS / ADV">
                    <UniformGrid Columns="3" Margin="0,10">
                        <Button Content="Read Partition" Style="{StaticResource ModernButton}" Margin="5" Click="BtnSimulate_Click"/>
                        <Button Content="Write Dump" Style="{StaticResource ModernButton}" Margin="5" Click="BtnSimulate_Click"/>
                        <Button Content="Wipe NVData" Style="{StaticResource ModernButton}" Margin="5" Click="BtnSimulate_Click"/>
                        <Button Content="Bootloader Unlock" Style="{StaticResource ModernButton}" Margin="5" Click="BtnBootloader_Click"/>
                    </UniformGrid>
                </TabItem>
            </TabControl>

            <!-- Progress Bar Section -->
            <StackPanel Grid.Row="2" Margin="0,10">
                <TextBlock x:Name="ProgressText" Text="Task Progress" Foreground="{StaticResource MutedTextBrush}" FontSize="11" Margin="0,0,0,5"/>
                <ProgressBar x:Name="TaskProgressBar" Height="8" Minimum="0" Maximum="100" Value="0" Background="#1E293B" Foreground="{StaticResource PrimaryBrush}" BorderThickness="0"/>
            </StackPanel>

            <!-- Console Log -->
            <Border Grid.Row="2" Background="Black" CornerRadius="10" Padding="15">
                <ScrollViewer x:Name="LogScrollViewer">
                    <TextBlock x:Name="ConsoleLog" Text="[SYSTEM] Application Started..." FontFamily="Consolas" Foreground="#10B981" TextWrapping="Wrap"/>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
